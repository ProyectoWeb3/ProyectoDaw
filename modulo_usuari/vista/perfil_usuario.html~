	<script>
		$(document).ready(function(){
			$("#perfil").click(function(){
				$("#cambiar_datos").css({"display":"none"});
				$("#feed_casas").css({"display":"block"});
				$("#cambiar_casas").css({"display":"none"});
				$("#baja").css({"display":"none"});
			});
			$("#change").click(function(){
				$("#cambiar_datos").css({"display":"block"});
				$("#feed_casas").css({"display":"none"});
				$("#cambiar_casas").css({"display":"none"});
				$("#baja").css({"display":"none"});
			});
			$("#changeCasas").click(function(){
				$("#cambiar_datos").css({"display":"none"});
				$("#feed_casas").css({"display":"none"});
				$("#cambiar_casas").css({"display":"block"});
				$("#baja").css({"display":"none"});
			});
			$("#off").click(function(){
				$("#cambiar_datos").css({"display":"none"});
				$("#feed_casas").css({"display":"none"});
				$("#cambiar_casas").css({"display":"block"});
				$("#baja").css({"display":"block"});
			});
		});
	</script>

